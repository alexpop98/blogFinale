{% extends 'AdminBundle::base.html.twig' %}

{% block body %}

    <h1>gestione post</h1>

    <p>
        <a href="{{ path('admin_post_new') }}" class="btn btn-primary">aggiungi un nuovo post</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Data di pubblicazione</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.name }}</td>
                <td>{{ post.category.name }}</td>
                <td>{% if post.createdAt %}{{ post.createdAt | date('d/m/Y H:i') }}{% endif %}</td>
                <td>
                    <a href="{{ path('admin_post_edit', {id: post.id}) }}" class="btn btn-primary">modifica</a>
                    {{ form_start(delete_forms[post.id], {attr: {style: 'display:inline'}}) }}
                    <input type="submit" value="Elimina" class="btn btn-danger">
                    {{ form_end(delete_forms[post.id]) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>

{% endblock %}
