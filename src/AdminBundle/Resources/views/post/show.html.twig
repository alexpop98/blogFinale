{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Sottotitolo</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Contenuto</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>data di creazione</th>
                <td>{% if post.createdAt %}{{ post.createdAt|date('d-m-Y H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>data di modifica</th>
                <td>{% if post.updatedAt %}{{ post.updatedAt|date('d-m-Y H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">torna alla lista</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Modifica</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Elimina">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
